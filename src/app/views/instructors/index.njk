{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">

    <div class="header">
      <a href="/instructors/create">Novo</a>

      <form action="/instuctors" method="GET">
        <input 
          type="text" 
          name="filter" 
          placeholder="Filtra por nome"
        >

        <button type="submit">Filtrar</button>
      </form>
    </div>
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Serviços</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
         {% for instructor in instructors %}
          <tr>
            <td>
            <span style="background-image: url({{ instructor.avatar_url }})"></span>
              {{ instructor.name }}
            </td>
            <td>{{ instructor.services }}</td>
            <td>{{ instructor.total_members }}</td>
            <td><a href="/instructors/{{ instructor.id }}">Ver</a></td>
          </tr>
        {% endfor %} 
      </tbody>
    </table>
  </div>
{% endblock content %}
